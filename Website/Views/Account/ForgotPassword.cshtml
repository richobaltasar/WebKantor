@{
    Layout = "_LayoutLogin";
    ViewBag.Title = "Forgot Password";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @*<img src="~/assets/vendor/Logins/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">*@
                <img src="~/assets/img/account/forgot-password-amico-1951.png"  alt="Image" class="img-fluid"/>
            </div>
            <div class="col-md-6 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h3>Forgot Password</h3>
                            <p class="mb-4">Reset password in two quick steps</p>
                        </div>
                        <form action="#" method="post">
                            <div class="form-group first">
                                <label for="username">Email or Username</label>
                                <input type="text" class="form-control" id="username">

                            </div>

                            <input type="submit" value="Reset Password" class="btn btn-block btn-primary">
                            
                            <input type="button" value="Back" class="btn btn-block btn-outline-secondary" onclick="location.href='@Url.Action("Login")';">
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
